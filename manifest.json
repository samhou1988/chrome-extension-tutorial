{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "2.1",
    "description": "learn chrome extension develop",
    "icons": {
        "128": "icon_128.png"
    },
    "background": {
        "persistent": false,
        "scripts": ["bg.js"]
    },
    "permissions": ["http://*.google.com/", "https://*.google.com/"],
    "browser_action": {
        "default_title": "",
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}